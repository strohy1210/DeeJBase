
  <div class="row page-header">
    <div class="title col-md-7">
    <h1> Find NYC's Rawest Talent </h1>
    </div>

    <%= form_tag(search_path, method: 'get', class: "search-djs pull-right col-md-4", role: "search") do %>
      <div class="form-group">
          <input type="text" class="form-control" placeholder="Chainsmokers" name="name">       
          <button class="btn btn-default" type="submit">Find DJs <i class="glyphicon glyphicon-search"></i></button>
      </div>
      <% end %>
  </div>

<div id="results">
<ul>
<% @djs.each do |dj| %>
    
  <div class='dj-item'>
    <div class= "dj-header">
      <h3><%= link_to dj.name, dj_path(dj) %></h3>
    
    </div>
    <div class="row">
      <p><div class="index-image col-md-3">
        <%= link_to image_tag(dj.image_url), dj_path(dj) %>
      </div></p>
      
      <div class="bio col-md-8">

        <%if dj.bio %>
        <h4>Sound Cloud Followers: <%= dj.sdcl_followers if dj.sdcl_followers %></h4>      
          <h4>Genres: <%= dj.genres.map {|g| g.name}.join(", ") %></h4>
           <h5> located in <%= dj.city %> </h5>
        <%end%>
      </div>
    </div>
    <br>
      <div class="sound-cld">
        <!-- Sound Cloud Followers: <%= dj.sdcl_followers if dj.sdcl_followers %> -->
      </div>
      <p><div class="demo-embed">
        <% track=dj.tracks.where.not(demo: nil)[0] %>
        <%= track.demo.html_safe %>
      </div></p>
  </div>
  <br>
<% end %>
   
        <br><br>
<div id="infinite-scrolling">
  <%= will_paginate @djs %>
</div>
</ul>
<div>

