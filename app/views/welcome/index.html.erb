
  <div class="row page-header">
    <div class="title col-md-7">
    <h1> <strong>FIND NYC'S RAWEST TALENT </strong> </h1>
    </div>

    <%= form_tag(search_path, method: 'get', class: "search-djs navbar-form pull-right", role: "search") do %>
      <div class="input-group">
          <input type="text" class="form-control" placeholder="Chainsmokers" name="name">
          <div class='input-group-btn'>       
          <button class="btn btn-default" type="submit">Find DJs <i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
      <% end %>
  </div>

<div id="results">
<ul>
<% @djs.each do |dj| %>
    
  <div class='dj-item'>
    <div class= "dj-header">
      <h3><%= link_to dj.name, dj_path(dj) %></h3>
    
    </div>
    <div class="row">
      <p><div class="index-image col-md-3">
        <%= link_to image_tag(dj.image_url), dj_path(dj) %>
      </div></p>

  <%= link_to dj_path(dj) do %>
      <div class="bio col-md-8">
        <%if dj.bio %>
        <% if !dj.genres.blank? %>     
          <h4>Genres: <%= dj.genres.map {|g| g.name}.join(", ") %></h4>
        <% end%>

          <h4>Sound Cloud Followers: <%= number_with_delimiter(dj.sdcl_followers, :delimiter => ',') if dj.sdcl_followers %></h4>
          <%if !dj.rate.blank? %>
        <h4><%= dj.rate %> per night (estimate)</h4>
        <%end%>
           <h5> located in <%= dj.city %> </h5>
        <%end%>
        <% if !dj.average_rating.blank? %>
        <div class='star'>
        </div>
        <%end%>
      </div>
<% end %>
    </div>
    <br>

      <p><div class="demo-embed">
        <% track=dj.tracks.where.not(demo: nil)[0] %>
        <%= track.demo.html_safe %>
      </div></p>

<script>
  $('.star').raty({
    readOnly: true,
    score: <%dj.average_rating%>,
    path: '/assets'
  });
</script>


  </div>
  <br>
<% end %>
   
        <br><br>
<div id="infinite-scrolling">
  <%= will_paginate @djs %>
</div>
</ul>


