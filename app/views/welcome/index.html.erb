<% content_for(:page_header) {"Find NYC's Rawest Talent"} %>
  <div class="filter_options_container">

  <form class="filter_form">
    <%= select("genre", "genre_id", Genre.all.map {|g| [g.name, g.id] }) %>
    <input type="submit" value="Filter" />
  </form>
  </div>

    <ul>
    <% @djs.each do |dj| %>
    <% if dj.dj_status %>
      <div class= "dj-header">
        <h3><%= link_to dj.name, dj_path(dj) %></h3>
      
      </div>

        <div class="bio">

          <%if dj.bio %>

            |<%= truncate(dj.bio.html_safe, length: 100, separator: " ") %> |
            
              <%= dj.genres.map {|g| g.name}.join(", ") %>
          <%end%>
        </div>
        <p><div class="index-image">
          <%= link_to image_tag(dj.image_url), dj_path(dj) %>
        </div></p>
      <div class="sound-cld">
        Sound Cloud Followers: <%= dj.sdcl_followers if dj.sdcl_followers %>
      </div>
        <p><div class="demo-embed">
          <% if dj.demo %>
          <%= dj.demo.html_safe %>
          <%end%>
        </div></p>
        _______________________________
       <% end %>
   
        <br><br>
    <% end %>
  </ul>


