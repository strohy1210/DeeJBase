  <script>


$(".update-form").hide();

$(".rate-dj").hide();

$('.edit-dj').click(function(){
  $(".update-form").toggle();
  $("#dj-profile").toggle();
  $(this).toggle();
  $('.tracks').hide();
   $('.review').toggle();
   $('.comments-title').toggle();
})

$('.cancel-edit').click(function(){
  $(".update-form").toggle();
  $("#dj-profile").toggle();
  $('.edit-dj').toggle();
  $('.tracks').show();
  $('.review').toggle();
  $('.comments-title').toggle();
})

$(".other-tracks").hide();
$('.more-tracks').click(function(){
  $(".other-tracks").slideDown();
  $(this).toggle();
  $('.review').toggle();
  $('.comments-title').toggle();
})

$('.hide-tracks').click(function(){
  $(".other-tracks").toggle();
  $('.more-tracks').toggle();
    $('.review').toggle();
  $('.comments-title').toggle();
})
