            <%= radio_button_tag(:dj_status, false) %>
            <%= label_tag(:dj_true, "I hire DJs.") %><br>
            <%= radio_button_tag(:dj_status, false) %>
            <%= label_tag(:dj_false, "I just want to know more.") %> <br>
                </div>
              </div>

