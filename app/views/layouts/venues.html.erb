<% @categories = ["Music Venues", "Dance Clubs", "Bars", "Lounges", "Cocktail Bars", "Dive Bars", "Pubs", "Adult Entertainment", "Champagne Bars", "Gay Bars", "Hookah Bars", "Hotels",["All categories", "all"]] %>
  <% if @neighborhood %>
  <li><form class="navbar-form col-xs-2">
   <%= select_tag(:neighborhood_id, options_for_select(Neighborhood.order('name ASC').map {|n| [n.name, n.id] }<< ["All neighborhoods", 'all'], @neighborhood.id), class: "form-control",:onchange => 'this.form.submit()') %>
  
  </li>
  <% else %>
  <li><form class="navbar-form col-xs-2">
    <%= select_tag(:neighborhood_id, options_for_select(Neighborhood.order('name ASC').map {|n| [n.name, n.id] } << ["All neighborhoods", 'all'], 'all'), class: "form-control",:onchange => 'this.form.submit()') %>
  </li>
  <%end%>
  <% if @category %>
  <li class="navbar-form col-xs-2">
    <%= select_tag(:category, options_for_select(@categories, @category), class: "form-control",:onchange => 'this.form.submit()') %>
  </li></form>
  <%else%>
  <li class="navbar-form col-xs-2">
    <%= select_tag(:category, options_for_select(@categories, "all"), class: "form-control",:onchange => 'this.form.submit()') %>
  </li></form>

  <%end%>
