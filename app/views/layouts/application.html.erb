<!DOCTYPE html>
<html>
<head>
  <title>DeeJBase - Find NY's Rawest DJs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-58043909-1', 'auto');
  ga('send', 'pageview');

</script>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container" id="bar">
    <div class="navbar-header">
      <%= link_to image_tag("logo_white.png"), root_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <% if !logged_in? %>
      <li><%= link_to 'Log in with Facebook', '/auth/facebook' %></li>
      <% else %>
      <li><%= link_to 'Logout', '/logout', method: "delete" %></li>
      <% end %>
      <% if current_user && current_user.dj_status %>
      <li> <%= link_to "Logged in as " + current_user.name, dj_path(current_user) %></li>
      <%elsif current_user && !current_user.dj_status%>
      <li> <%= link_to "Logged in as " + current_user.name, '#' %></li>
      <%end%>
      <li><%= link_to 'About', about_path%></li>
      <li><%= link_to 'All DJs', root_path%></li>
  <% if @genre %>
  <li><form class="navbar-form navbar-right">
   <%= select_tag(:genre_id, options_for_select(Genre.all.map {|g| [g.name, g.id] }<< ["All Genres", 'all'], @genre.id), class: "form-control",:onchange => 'this.form.submit()') %>
  
  </form></li>
  <% else %>
  <li><form class="navbar-form navbar-right">
    <%= select_tag(:genre_id, options_for_select(Genre.all.map {|g| [g.name, g.id] } << ["All Genres", 'all'], 'all'), class: "form-control",:onchange => 'this.form.submit()') %>
  </form></li>
  <%end%>
  <% if @filter %>
  <li><form class="navbar-form navbar-right">
    Sort: <%= select_tag(:filter, options_for_select([["SoundCloud Followers (least)", :scld_asc], ["SoundCloud Followers (most)", :scld_desc]], @filter), class: "form-control",:onchange => 'this.form.submit()') %>
  </form></li>
  <%else%>
      <li><form class="navbar-form navbar-right">
    Sort: <%= select_tag(:filter, options_for_select([["SoundCloud Followers - Fewest", :scld_asc], ["SoundCloud Followers - Most", :scld_desc]], :scld_desc), class: "form-control",:onchange => 'this.form.submit()') %>
  </form></li>

  <%end%>
    </ul>
  </div>

</div>


<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  
<%= yield %>

  <div class='footer controls text-center col-md-12'>
    <%= link_to "Login", '/auth/facebook' %> |
    <%= link_to "Sign Up", '/auth/facebook' %> |
    <%= link_to 'Contact', '#', class: 'send-contact'%> |
    <%= link_to 'Back', root_path %> 
  </div>
</div>
</body>
</html>
