<% if @dj %>
  $('#star').raty({
    readOnly: true,
    score: <%= @dj.average_rating %>,
    path: '/assets'
  });
<%end%>
<% if @venue%>


  $('#star').raty({
    readOnly: true,
    score: <%= @venue.average_rating %>,
    path: '/assets'
  });

<%end%>

$('#user_star').raty({
  score: <%= @rating.score %>,
  path: '/assets',
  cancel: true,
  click: function(score, evt) {
    $.ajax({
      url: '/ratings/' + <%= @rating.id %>,
      type: 'PATCH',
      data: { score: score }
    }).done(function (data){});
  }
});