       <%= email_field_tag(:email, "", class: 'form-control', placeholder: "youremail@email.com", required: true) %>
        <%= hidden_field_tag(:mailing, true) %>


        <%= submit_tag "Send me a weekly email about parties in ny", class: 'btn listserve-btn' %>
        <%end%>
      </div>
