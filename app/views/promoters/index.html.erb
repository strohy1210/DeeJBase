<script type="text/javascript">
  <% @promoters.each do |promoter| %>
   $("#star<%=promoter.id%>").raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      path: '/assets'
    });
  <%end%>


</script>
