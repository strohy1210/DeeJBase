  </div>
<div class="venue-list container-fluid">
<div id="results">
  <br>
<% @promoters.includes([:events, :comments]).each_with_index do |promoter, i| %>
  <% if i%3 == 0  %>
    <div class='dj-item grey-overlay'>
  
  <%elsif i%3 == 1%>
    <div class='dj-item red-overlay'>
  <%else%>

    <div class='dj-item brown-overlay'>

  <%end%>
     <a href="/promoters/<%=promoter.slugify%>">
    <div class="row">
    <div class= "dj-header col-md-4 col-md-offset-1">
      <h2><%=promoter.name.titleize%></h2>
        <div class='overlay'>
        
        <div id="star<%=promoter.id%>" class="djb" data-score=<%=promoter.average_rating%>>
         Music<sup></sup>:
        </div>

       </div>        
    </div>

        <div class="preview col-md-5 col-md-offset-1">
          <% comments = promoter.comments.select {|c| c.is_valid? && c.valid? && c.rating.valid? && c.rating.score != 0} if promoter.comments.any?  %>
          <% if comments && comments.any? %>
        <em><%=truncate(comments.last.body, length: 300, separator: " ") %></em>
        <%else%>
          <em>Be the first to review <%=promoter.name%>'s music.</em>
        <%end%>
      </div>
</h6>
    </div>


  </div></a>

<% end %> 
