<div class= "venue-show container-fluid">
<div class="row page-header title">
  <h2> <%= @promoter.name %>  </h2>
        <div id='star'>
   
</div>

      </div>
<div class="dj-profile">

<div class="row">
<div id="dj-profile">


  <div class="dj-info promoter-info col-md-6 vertical-center">   
    <div class="other-info">

    </div>
  
  <div class='rate-button btn-centered btn-lg btn-default col-md-6'>Review <%=@promoter.name%></div>

  <div class="rate-dj">
    <% if logged_in? %>
      <% @resource = @promoter %>
     <%= render :partial => '/venues/review_form' %> 
    <%elsif !logged_in?%>
      <div class="text-center bg-warning">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><strong> You must be logged in to add a rating.</strong>

      
      <h4><%= link_to 'Sign in with Facebook', '/auth/facebook'%>
      | <%= link_to 'Back', '#', class: 'text-center done-rating'%></h4>   </div>
     <%end%> 
 
  </div><br>
  
</div>

</div>
<!--   <div class="profile-pic col-md-3">
    <%= image = image_tag (@image), class: "profile-image" %>
  </div> -->
</div>
<br>

  <% if @comments %>
     <h5 class="row venue-comments-title">Reviews</h5>

     <%= render 'reviews' %>

  <%end%>
</div>

  <% content_for :head do %>
    <meta property="fb:app_id" content="373382026154995" />
    <meta property="og:url" content="http://www.deejbase.com/promoters/<%=@promoter.slugify%>" /> 
    <meta property="og:site_name" content="Deejbase" />
    <% if @rating_fbshare %>
      <meta property="og:title" content="I rated <%=@promoter.name%> <%=@rating_fbshare%> out of 5 stars. Check out my review." />
    <%else%>
      <meta property="og:title" content="A review of one of <%=@promoter.name%>'s parties." />
    <%end%>
    <meta property="og:description" content="<%=@comment_fbshare%>"/>
    <meta property="og:image" content="<%=@image%>"/>
    
  <% end %>

  <% if logged_in? && @promoter.ratings.where(user: current_user).valid_only.any?%><br>
  <div class="social-share">
    Reviewed <%= @promoter.name%>? Share that shit.
    <div class="fb-share-button" data-href="http://www.deejbase.com/promoters/<%=@promoter.slugify%>" data-layout="button"></div></div>
  <%end%>

<br>

<script>
  $('#star').raty({
    readOnly: true,
    score: <%= @promoter.average_rating %>,
    size: 40,
    path: '/assets'
  });


  $('#user_star').raty({
    score: <%= @new_rating.score %>,
    cancel: true,
    path: '/assets',
    click: function(score, evt) {
      $.ajax({
        url: '/ratings/' + <%= @new_rating.id %>,
        type: 'PATCH',
        data: { score: score }
      });
    }
  });



</script>
