  <script type="text/javascript">
    $(function() {  
        $('#select_origin').autocomplete({
            source: '<%= djs_path(:json) %>'
          })

        $('.submit-comment').click(function(){
          var dj_name = $('#select_origin').val();
          $('#link_dj').val(dj_name);
