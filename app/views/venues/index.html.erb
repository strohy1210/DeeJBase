
  <div class="row header">
    <div class="title">
    <h3 class="text-center"> Rate the DJ </h3>
    </div>
<!-- <div class="search-venues">

</div> -->
  </div>
<div class="venue-list container-fluid">
<div id="results">
<ul>
<% @venues.each do |venue| %>
    
  <div class='dj-item'>
    <div class="row">
    <div class= "dj-header col-md-3">
      <h2><%= link_to venue.name.titleize, venue_path(venue.slugify) %></h2>
        <% if !venue.neighborhood.blank? %>     
          <h4><%= venue.neighborhood.name %></h4>
        <% end%>
    
    </div>


  <%= link_to venue_path(venue.slugify) do %>
      <div class="bio col-md-4 col-md-offset-1">
        <div class='overlay'>
        
<br>
        <div id="star<%=venue.id%>" class="djb" data-score=<%= venue.average_rating%>>
         Music Rating<sup>beta</sup>:
        </div>
       </div>
      </div>

  <% end %>
<h6>
        <div class="preview col-md-3">
        <em><%=link_to truncate(venue.comments.first.body, length: 110, separator: " ") if venue.comments.any? %></em>
      </div>
</h6>
    </div>


  </div>
  <br>
<% end %>
   
        <br><br>
<div id="infinite-scrolling">
  <%= will_paginate @venues %>
</div>
</ul>

<script type="text/javascript">
  <% @venues.each do |venue| %>
   $("#star<%=venue.id%>").raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      path: '/assets'
    });
  <%end%>
</script>


