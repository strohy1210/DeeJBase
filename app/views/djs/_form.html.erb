<%= form_for @dj do |f|%>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name, class: 'form-control', required: true, placeholder: "Chainsmokers" %><br>
  <%= f.label 'Image URL' %><br>
  <%= f.text_field :image_url, class: 'form-control', required: true, placeholder: "http:://..." %><br>
  <%= f.label 'phone' %><br>
  <%= f.text_field :phone, class: 'form-control' %><br>
  <%= f.label 'email' %><br>
  <%= f.text_field :email, class: 'form-control', placeholder: "sickdj@email.com" %><br>
  <%= f.label 'Hourly Rate' %><br>
  <%= f.text_field :rate_per_hour, class: 'form-control', placeholder: "e.g. 100" %><br>
  <%= f.label 'What\'s your story?' %>
  <%= f.text_area :bio, rows: 3, class: 'form-control', placeholder: "Raised in Queens, spinning since 99.." %><br>
  <%= f.label 'Soundcloud Embed' %>
  <%= f.text_area :demo, rows: 3, class: 'form-control', placeholder: 'Find your soundcloud demo, click on the share link underneath it, go to the tab that says "embed", and copy the text (which starts with "iframe") into this form.'%><br>

      <% Genre.all.each_with_index do |g,i| %>
        <%= label_tag(:g, g.name) %>
        <% if @dj.genres.include? g %>
          <input id="dj_genres" name="genres[][id]" value='<%= g.id %>' type="checkbox" checked><br>
        <%else%>
          <input id="dj_genres" name="genres[][id]" value='<%= g.id %>' type="checkbox"><br>
        <%end%>
      <%end%>

  
<br>
<%= f.submit "Update", class: 'btn btn-primary' %>


<%end%>
