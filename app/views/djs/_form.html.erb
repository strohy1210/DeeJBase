<%= form_for @dj do |f|%>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name, class: 'form-control', required: true, placeholder: "Chainsmokers" %><br>
  <%= f.label 'Image URL' %><br>
  <%= f.text_field :image_url, class: 'form-control', required: true, placeholder: "http:://..." %><br>
  <%= f.label 'phone' %><br>
  <%= f.text_field :phone, class: 'form-control' %><br>
  <%= f.label 'email' %><br>
  <%= f.text_field :email, class: 'form-control', placeholder: "sickdj@email.com" %><br>
  <%= f.label 'Hourly Rate' %><br>
  <%= f.text_field :rate_per_hour, class: 'form-control', placeholder: "e.g. 100" %><br>
  <%= f.label 'What\'s your story?' %>
  <%= f.text_area :bio, rows: 3, class: 'form-control', placeholder: "I've performed at venues such as Ella and Anchor Bar. I live in Queens and love funky music that puts a smile on your face and a pep in your step." %><br>
  <div class="panel panel-default">
    <div class="panel-heading">Tracks</div>
    <div class="panel-body">
    <%= f.fields_for :tracks do |tracks_form| %>
    <%= render 'track_fields', f: tracks_form %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "add_track", f, :tracks %>
      </div>
    </div>
  </div>

  <strong><%= f.label 'Choose the genres you identify most with (put more specific info in the "what\'s your story" section above).' %>: </strong> <br>
      <% Genre.all.each_with_index do |g,i| %>
        <%= label_tag(:g, g.name) %>
        <% if @dj.genres.include? g %>
          <input id="dj_genres" name="genres[][id]" value='<%= g.id %>' type="checkbox" checked>
        <%else%>
          <input id="dj_genres" name="genres[][id]" value='<%= g.id %>' type="checkbox">
        <%end%>
        |
      <%end%>

  
<br><br>
<%= f.submit "Update", class: 'btn btn-primary' %>


<%end%>
