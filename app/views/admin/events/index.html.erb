<div id="admin">
<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Venue</th>
      <th>Dj</th>
      <th>Promoter</th>
      <th>Photo,</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.venue.name if event.venue %></td>
        <td><%= event.dj_id %></td>
        <td><%= event.promoter.name if event.promoter %></td>
        <td><%= image = image_tag (event.photo.url(:medium)) %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
